<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="container contact contact-show showform">
      <h2>Show</h2>
      <div class="card bg-light mb-3" style="max-width: 30rem;">
        <div class="card-header"><%= contact.name%></div>
        <div class="card-body">
          <p class="card-title"><label>Email</label><%= contact.email %></p>
          <p class="card-text"><label>Phone</label><%= contact.phone %></p>
        </div>
      </div>
      <div class="contact-menu mt-2">
        <a href="/contacts/<%= contact._id %>/edit" class="btn btn-light mr-2">Edit</a>
        <form action="/contacts/<%= contact._id %>?_method=delete" method="post">
          <a href="#" class="btn btn-light" onclick="confirm('Do you want to delete this?')?this.parentElement.submit():null;">Delete</a>
        </form>
      </div>
    </div>
  </body>
</html>